<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>

<VBox
	xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="com.muiz6.system.attendance.ui.controller.AddEmployeeContent">

<!--	re usable objects-->
	<fx:define>
		<ToggleGroup fx:id="toggle_group"/>
		<String
			fx:id="string_time_default"
			fx:value="12:00 am"/>
		<String
			fx:id="string_time_default_holiday"
			fx:value="Holiday"/>
	</fx:define>

	<HBox
		maxWidth="Infinity">
		<Button
			fx:id="_btnBack"
			text="Back"
			onAction="#onBtnClick"
			GridPane.rowIndex="0"
			GridPane.columnIndex="0"/>

		<Label
			text = "Add Employee"
			maxWidth="Infinity"
			alignment="CENTER"
			HBox.hgrow="ALWAYS">
			<padding>
				<Insets top="15"/>
			</padding>
		</Label>
	</HBox>

	<VBox
		VBox.vgrow="ALWAYS"
		maxHeight="Infinity"
		alignment="CENTER"
		spacing="15">

		<TextField
			promptText="Enter Employee Name"
			maxWidth="300"/>

		<HBox
			spacing="15"
			maxWidth="300">
			<Label
				text="Join Date:"
				maxHeight="Infinity"/>
			<TextField
				fx:id="_textDate"
				HBox.hgrow="ALWAYS"
				text="01-Jan-2020"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextClick"
				maxWidth="Infinity"/>
		</HBox>

		<Label
			text="Time In"
			GridPane.rowIndex="0"
			GridPane.columnIndex="1"/>

		<GridPane
			maxWidth="300"
			vgap="10"
			hgap="10">

			<Label
				text="Monday"
				GridPane.rowIndex="0"
				GridPane.columnIndex="0"/>
			<TextField
				fx:id="_textTimeMonday"
				text="$string_time_default"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0"/>

			<Label text="Tuesday"
				GridPane.rowIndex="0"
				GridPane.columnIndex="1"/>
			<TextField
				fx:id="_textTimeTuesday"
				text="$string_time_default"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="1"
				GridPane.columnIndex="1"/>

			<Label
				text="Wednesday"
				GridPane.rowIndex="2"
				GridPane.columnIndex="0"/>
			<TextField
				fx:id="_textTimeWednesday"
				text="$string_time_default"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="3"
				GridPane.columnIndex="0"/>

			<Label
				text="Thursday"
				GridPane.rowIndex="2"
				GridPane.columnIndex="1"/>
			<TextField
				fx:id="_textTImeThursday"
				text="$string_time_default"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="3"
				GridPane.columnIndex="1"/>

			<Label
				text="Friday"
				GridPane.rowIndex="4"
				GridPane.columnIndex="0"/>
			<TextField
				fx:id="_textTimeFriday"
				text="$string_time_default"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="5"
				GridPane.columnIndex="0"/>

			<Label
				text="Saturday"
				GridPane.rowIndex="4"
				GridPane.columnIndex="1"/>
			<TextField
				fx:id="_textTimeSaturday"
				text="$string_time_default"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="5"
				GridPane.columnIndex="1"/>

			<Label
				text="Sunday"
				GridPane.rowIndex="6"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"/>
			<TextField
				fx:id="_textTimeSunday"
				text="$string_time_default_holiday"
				editable="false"
				alignment="CENTER"
				onMouseClicked="#onTextTimeClick"
				GridPane.rowIndex="7"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"/>

			<columnConstraints>
				<ColumnConstraints
					hgrow="ALWAYS"
					halignment="CENTER"/>
				<ColumnConstraints
					hgrow="ALWAYS"
					halignment="CENTER"/>
			</columnConstraints>

		</GridPane>

		<Button
			fx:id="_btnAdd"
			text="Add"
			onAction="#onBtnClick"
			maxWidth="300"
			GridPane.halignment="CENTER"/>

	</VBox>

</VBox>
